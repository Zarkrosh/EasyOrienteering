<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <TextView
        android:id="@+id/dialog_scan_inicial_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Titulo"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/rlRecursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_scan_inicial_titulo">

        <ProgressBar
            android:id="@+id/dialog_scan_inicial_progress"
            style="?android:attr/progressBarStyle"
            android:layout_width="@dimen/tamIndicadorDialogoRegistro"
            android:layout_height="@dimen/tamIndicadorDialogoRegistro"
            android:layout_centerInParent="true"
            tools:layout_editor_absoluteY="149dp" />

        <ImageView
            android:id="@+id/dialog_scan_inicial_imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="24dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:maxWidth="@dimen/tamIndicadorDialogoRegistro"
            android:scaleType="centerCrop"
            android:src="@drawable/exito" />

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_scan_inicial_mensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingBottom="32dp"
        android:layout_marginBottom="10dp"
        android:text="Mensaje de Ã©xito o error"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlRecursos"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/dialog_scan_inicial_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@android:string/ok"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>