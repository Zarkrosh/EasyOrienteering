<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Tiempos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tiempo parcial -->
        <TextView
            android:id="@+id/item_parcial_tiempo_parcial"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:gravity="end|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tamLetraItemResultados"
            tools:text="1.03" />

        <!-- Tiempo acumulado -->
        <TextView
            android:id="@+id/item_parcial_tiempo_acumulado"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:gravity="end|center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tamLetraItemResultados"
            android:background="#DDD"
            tools:text="19.36" />

    </LinearLayout>

    <!-- Posiciones -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Tiempo parcial -->
        <TextView
            android:id="@+id/item_parcial_posicion_parcial"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tamLetraItemResultados"
            tools:text="(2)" />

        <!-- PosiciÃ³n acumulada -->
        <TextView
            android:id="@+id/item_parcial_posicion_acumulado"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tamLetraItemResultados"
            android:background="#DDD"
            tools:text="(4)" />

    </LinearLayout>

</LinearLayout>